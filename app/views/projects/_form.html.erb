<div class="row well" align="center">
  <div class="col-md-12">
    <%= form_for(@project, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class="form-group">
        <div class="control-label col-md-2">
          <%= f.label :title %>
        </div>
        <div class="col-md-8">
          <%= f.text_field :title, class: "form-control", placeholder: "Title of project", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-md-2">
          <%= f.label :description %>
        </div>
        <div class="col-md-8">
          <%= f.text_area :description, rows: 4, class: "form-control", placeholder: "Enter Description of project" %>
        </div>
      </div><br>

      <div class="form-group">
        <div class="control-label col-md-2">
          <%= f.label :Developers %>&nbsp;&nbsp;&nbsp;
        </div>
        <div class="col-md-8">
          <%= f.select(:user_ids, User.Developer.collect {|p| [ p.username, p.id ] }, { :prompt => ""}, 
                                                   { :multiple => true, :size => 5  }) %>
        </div>
      </div><br>

      
      <div class="form-group">
        <div class="control-label col-md-2">
          <%= f.label :QA %>&nbsp;&nbsp;&nbsp;
        </div>
        <div class="col-md-8">
          <%= f.select(:user_ids, User.QA.collect {|p| [ p.username, p.id ] }, { :prompt => ""}, 
                                                   { :multiple => true, :size => 5  }) %>
        </div>
      </div><br>
     

      <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
          <%= f.submit class: "btn  btn-lg btn-xlarge" %>
        </div>
      </div><br>
    <% end %>
    <div class="col-md-4 col-md-offset-4 colormatch">
      [ <%= link_to "Cancel request and return to projects listing", projects_path %> ]
    </div>
  </div>
</div>